script(src="/js/navbar.js", crossorigin="anonymous")
script.
    window.SketchelAuth = true;
nav.navbar.is-spaced(role="navigation", aria-label="main navigation")
    a.navbar-brand(href="/")
        figure(class="image is-48x48")
            img(class="image is-48x48", src="/assets/Sketchel.png") 
        a.navbar-burger(role="button", data-target="navbar", aria-label="menu", aria-expanded="false")
            span(aria-hidden="true")
            span(aria-hidden="true")
            span(aria-hidden="true")
    div.navbar-menu(id="navbar")
        div.navbar-start
            a.navbar-item(href="/feed") <i class="fas fa-rss"></i>&nbsp;Feed
            a.navbar-item(href="/hot") <i class="fas fa-fire"></i>&nbsp;Hot
            
            
        div.navbar-end
            a.navbar-button(style="margin-right: 6px")
                div.field
                    p.control.has-icons-left
                        input.input.is-rounded(type="text", placeholder="Search")   
                        span.icon.is-small.is-left
                            i.fas.fa-search         
            a.navbar-item(onclick="sketchelapp.panels.notifications.open()") <i class="fas fa-bell"></i>
            a.navbar-item(href="/create") <i class="fas fa-paint-brush"></i>
            div.navbar-item.has-dropdown.is-hoverable

                a.navbar-link #{username}

                div.navbar-dropdown
                    a.navbar-item(href="/profile") Profile
                    a.navbar-item(href="/settings") Settings
                    hr.navbar-divider
                    a.navbar-item(href="/logout") Logout
                                            