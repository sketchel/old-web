html 
  include includes/head.pug
  body  

    section.hero.is-medium.is-primary.is-bold
      div.container
        div.hero-head
            if authorized
                include includes/navbar-2 
            if !authorized
                include includes/navbar-1  
        div.hero-body.has-text-centered
            if authorized
                h1.title.is-2 <i class="em em em-wave" aria-role="presentation" aria-label=""></i>
                h1.title <strong>Welcome back,</strong> #{username}
